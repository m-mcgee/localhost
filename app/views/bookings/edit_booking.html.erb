<%= form_tag(update_booking_path, method: :put) do %>
  <%= label_tag 'Tourist email' %>
  <%= text_field_tag :guest, User.find(@booking.guest_id).email%><br>
  <%= label_tag 'Starting Location' %>
  <%= text_field_tag :meet_location, @booking.meet_location %><br>
  <%= label_tag 'Start Time' %>
  <%= text_field_tag :start_time, @booking.start_time %><br>
  <%= label_tag 'End Time' %>
  <%= text_field_tag :end_time, @booking.end_time %><br>
  <%= label_tag 'Summary' %>
  <%= text_area_tag :summary, @booking.summary %><br>
  <%= hidden_field_tag :booking_id, @booking.id  %>
  <%= submit_tag %>
<% end %>

