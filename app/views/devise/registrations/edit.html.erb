<div id="edit-form" class="ui raised very padded text container segment">
  <h2 class="ui dividing header">Edit your profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "ui form" }) do |f| %>
    <%= devise_error_messages! %>
    <div class="grouped fields">
    <div class="two fields">
        <!-- Avatar image -->
        <div>
          <%= image_tag resource.avatar.url(:thumb) %>
        </div>
        <!-- Avatar description -->
        <div class="three wide field">
            <%= f.label :avatar  %>
            <%= f.file_field :avatar %>
        </div>
      </div>
      <div class="two fields">
       <!-- Name field -->
        <div class="inline field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        <!-- Email field -->
        <div class="inline field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      <!-- Bio field -->
      <div class="inline field">
        <%= f.label :bio %><br />
        <%= f.text_area :bio, autofocus: true %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <!-- Password change field -->
      <div class="inline field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <!-- Password confirmation field -->
      <div class="inline field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <!-- Current password field -->
      <div class="inline field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>

      <!-- Update button -->
      <div class="actions">
        <%= f.submit "Update" %>
      </div>

    </div>
  <% end %>

  <!-- Cancel account -->
  <div class="two fields">
    <div class="field">
      <div class="ui basic right aligned segment">
          <p>Cancel account</p>
           <p>
            <%= button_to "Submit", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui button" %>
           </p>
        </div>
      </div>
    <div class="field">
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
