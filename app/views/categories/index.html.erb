
<!-- Each link should have the host :location as a dependency -->
<% binding.pry %>
 <div class="container-fluid">
  <% @categories.each do |category| %>
    <div class="col-md-4">
      <div class="category-box">
      	<%= category.avatar %>
        <%= link_to category.title, users_path(:category => category.id )%>
      </div>
   </div>
  <% end %>
</div>
